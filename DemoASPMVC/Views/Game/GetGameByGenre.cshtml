@model DemoASPMVC.Models.Game
@using DemoASPMVC.Tools;
@using DemoASPMVC_DAL.Models;
@inject SessionManager session;

@{
    ViewData["Title"] = "GetGameByGenre";
    IEnumerable<Genre> genres = ViewData["ListeGenre"] as IEnumerable<Genre> ?? null;
}

<h1>GetGameBygenre</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Genre_Id" class="control-label"></label>
                <select name="genreId" asp-for="Genre_Id" class="form-control">
                    <option value="-1">Pas de genre</option>
                    @foreach (Genre genre in genres)
                    {
                        <option value="@genre.Id">@genre.Label</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="GetGameByGenre" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
